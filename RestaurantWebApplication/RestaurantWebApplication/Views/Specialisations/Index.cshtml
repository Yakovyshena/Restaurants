@model IEnumerable<RestaurantWebApplication.Specialisation>

@{
    ViewData["Title"] = "Index";
}

<h1>SPECIALIZATION</h1>

<p>
    <a asp-action="Create">CRATE NEW</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.SpecialisationsWithChefs) {
        <tr>
            <td>
                @item.Item1.Name
            </td>
            <td>
                @if(item.Item2.Count == 0)
                {
                    <a asp-action="Delete" asp-route-id="@item.Item1.SpecialisationId">DELETE</a>
                }
                else
                {
                    <i>STELL GOT SOME CHEFS WITH THIS SPEC</i>
                }
            </td>
        </tr>
}
    </tbody>
</table>
