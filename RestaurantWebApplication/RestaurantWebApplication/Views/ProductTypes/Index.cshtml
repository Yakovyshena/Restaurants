@model IEnumerable<RestaurantWebApplication.ProductType>

@{
    ViewData["Title"] = "Index";
}

<h1>PRODUCT TYPES</h1>

<p>
    <a asp-action="Create">CREATE NEW</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.ProductTypesWithProducts) {
        <tr>
            <td>
                @item.Item1.Name
            </td>
            <td>
                @if(item.Item2.Count == 0)
                {
                    <a asp-action="Delete" asp-route-id="@item.Item1.ProductTypeId">DELETE</a>
                }
                else
                {
                    <i>STILL HAVE SOME PRODUCTS WITH THIS TYPE</i>
                }
            </td>
        </tr>
}
    </tbody>
</table>
