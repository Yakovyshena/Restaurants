@model RestaurantWebApplication.Menu

@{
    ViewData["Title"] = "Edit";
}

<h1>EDIT</h1>

<h4>
    MENU
    <text>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;</text>
    <a asp-action="Dishes" asp-route-id="@Model?.MenuId">MANAGE DISHES</a>
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MenuId" />
            <div class="form-group">
                <label asp-for="BrandChefId" class="control-label"></label>
                <select asp-for="BrandChefId" class="form-control" asp-items="ViewBag.BrandChefId"></select>
                <span asp-validation-for="BrandChefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">MENU LIST</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
